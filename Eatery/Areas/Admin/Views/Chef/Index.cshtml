@model List<ChefGetVM>


<div class="container">
	<div class="row">

		<div><h2>Chefs Table</h2></div>
		<a class="btn btn-success" asp-action="Create">Add a new Chef</a>
		<table class="table table-dark">
			<thead>
				<tr>
					<th scope="col">Id</th>
					<th scope="col">Fullname</th>
					<th scope="col">Description</th>
					<th scope="col">Image</th>
					<th scope="col">Category</th>
					<th scope="col">Actions</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var chef in Model)
				{
					<tr>
						<th scope="row">@chef.Id</th>
						<td>@chef.Fullname</td>
						<td>@chef.Description</td>
						<td><img src="~/assets/images/@chef.ImagePath"/></td>
						<td>@chef.CategoryName</td>
						<td>	
							<a asp-action="Update" asp-route-id="@chef.Id" class="btn btn-warning">Update</a>
							<a asp-action="Delete" asp-route-id="@chef.Id" class="btn btn-danger">Delete</a>
						</td>
					</tr>
				}
			</tbody>
		</table>


	</div>
</div>